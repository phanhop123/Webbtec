@model IEnumerable<Web_bao.Data.Course>

@{
    ViewData["Title"] = "Index";
}

<h1 class="creat">Course Manager</h1>
<style>


  
    .card {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        width: 300px;
        overflow: hidden;
        text-align: center;
        margin-left: 20px
    }

    .header {
        display: flex;
        align-items: center;
        padding: 16px;
        border-bottom: 1px solid #ddd;
    }

    .avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-right: 10px;
    }

    .user-info h2 {
        margin: 0;
        font-size: 16px;
    }

    .user-info p {
        margin: 0;
        color: #888;
        font-size: 12px;
    }

    .image-container {
        position: relative;
    }

        .image-container img {
            width: 100%;
            height: auto;
        }

    .hours-label {
        position: absolute;
        top: 10px;
        left: 10px;
        background-color: rgba(0, 0, 0, 0.5);
        color: #fff;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 12px;
    }

    .description {
        padding: 16px;
    }

    .edit-button {
        background-color: #ff6b6b;
        color: white;
        border: none;
        padding: 10px 20px;
        margin: 16px;
        cursor: pointer;
        border-radius: 4px;
    }

        .edit-button:hover {
            background-color: #ff4b4b;
        }

    .creat{
        margin-left:20px;
    }

    .card-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }
</style>
<p class="creat">
    <a asp-action="Create">Create New</a>
</p>
<div class="card-container">
@foreach (var item in Model) {

<div class="card">
    <div class="header">
                <img class="avatar" src="~/hinh/@item.User.Image" alt="User Avatar">
        <div class="user-info">
                <h2>@item.User.FistName  @item.User.LastName</h2>
            <p>1-1-2024</p>
        </div>
    </div>
    <div class="image-container">
        <div class="hours-label">60 Hours</div>
                <img src="~/hinh/Anhhoc/@item.Image" width="60px" height="40px" alt="S.O.L.I.D. Image">
    </div>
    <div>

        <h3>@item.Name</h3>
        </div>


            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> 
        </div>
}
    </div>
